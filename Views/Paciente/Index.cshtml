@model IEnumerable<HealthTrack.Models.Paciente>

<h2>Lista de Pacientes</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Adicionar Paciente</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Nome</td>
                <td>@paciente.CPF</td>
                <td>@paciente.DataNascimento.ToShortDateString()</td>
                <td>@paciente.Endereco</td>
                <td>@paciente.Telefone</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@paciente.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@paciente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
